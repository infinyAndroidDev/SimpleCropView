<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="AppTheme.Light.NoActionBar" parent="android:Theme.DeviceDefault.Light">
    <item name="android:textColorSecondary">@color/colorPrimaryDark</item>
    <item name="android:colorBackground">@color/colorPrimary</item>
    <item name="android:colorControlNormal">@android:color/white</item>
    <item name="android:windowBackground">@color/windowBackground</item>
    <item name="android:textAppearanceButton">@style/AppTheme.Button.Borderless</item>
    <item name="android:textAppearanceSmall">@style/TextAppearance.Small</item>
    <item name="android:actionBarStyle">@style/MyActionBarTheme</item>
  </style>
  <style name="MyActionBarTheme" parent="@android:style/Widget.Holo.Light.ActionBar">
    <item name="android:background">@drawable/k_btn</item>
    <item name="android:icon">@mipmap/ic_launcher</item>
    <item name="android:titleTextStyle">@style/titleText</item>
  </style>
  <style name="titleText" parent="TextAppearance.Small">
    <item name="android:textColor">#FFF</item>
    <item name="android:textSize">24sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:typeface">serif</item>
  </style>
</resources>